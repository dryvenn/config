#!/usr/bin/env bash

set -o errexit
set -o errtrace
set -o nounset
set -o pipefail
#set -o xtrace

DIR=~/.config
LINKME="
Xresources
bash_profile
bashrc
compton.conf
gitconfig
gitignore
gtkrc-2.0
i3
i3status.conf
pythonrc
tmux
tmux.conf
vim
vimrc
xonshrc
"

# Get latest changes from Git
stash=$(git stash create -kua)
git reset --hard
git pull --rebase origin master
git submodule update --init
if [ -n "$stash" ]
then
	git stash apply $stash
fi

# Link dotfiles
for l in $LINKME
do
	ln -svnf $DIR/$l ~/.$l
done

echo "Installing vim plugins..."
vim +PlugInstall +PlugUgrade +PlugUpdate +qall &> /dev/null

echo "Installing tmux plugins..."
~/.tmux/plugins/tpm/bin/install_plugins &> /dev/null
~/.tmux/plugins/tpm/bin/update_plugins all &> /dev/null

echo "Compiling kakoune..."
make -j $(nproc) -C $DIR/kak/kakoune/src &> /dev/null
mkdir -p ~/.local/bin
ln -snf $DIR/kak/kakoune/src/kak ~/.local/bin/kak

echo "Done."
